# proactivle/backend/Dockerfile
FROM node:18-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm ci --production=false

COPY . .
# optional build step if you have transpilation etc
RUN npm run build || true

FROM node:18-alpine AS runtime
WORKDIR /app

# install only production deps
COPY package*.json ./
RUN npm ci --production=true

COPY --from=build /app ./

ENV NODE_ENV=production
EXPOSE 8080

CMD ["node", "server.js"]
